<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo_app">

    <!-- LOGO SUPERIOR -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTÃ“N VOLVER -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolver"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="VOLVER"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/verde_boton_app"
        app:shapeAppearance="@style/ShapeAppearance.App.Button.EsquinasPersonalizadas"
        app:icon="@drawable/arrow_back"
        app:iconTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUSCAR DNI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilBuscarDni"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="12dp"
        android:hint="BUSCAR POR DOCUMENTO"
        app:boxBackgroundColor="@color/white"
        app:shapeAppearance="@style/ShapeAppearance.App.FormInput"
        app:boxCornerRadiusTopStart="36dp"
        app:boxCornerRadiusBottomStart="36dp"
        app:boxCornerRadiusTopEnd="36dp"
        app:boxCornerRadiusBottomEnd="36dp"
        app:layout_constraintTop_toBottomOf="@id/btnVolver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtBuscarDni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- LISTA DE CLIENTES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaClientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilBuscarDni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
