<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_fondo"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo Freekoders"
        android:src="@drawable/logoclub" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/green_carteles"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Volver"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LISTA DE PAGOS"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/green_carteles"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true">

        <EditText
            android:id="@+id/et_documento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ingrese documento..."
            android:background="@null"
            android:textColor="#FFFFFF"
            android:textColorHint="#DDFFFFFF"
            android:inputType="text"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Buscar"
            android:src="@drawable/search" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F0F0"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presiona la opciÃ³n deseada"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_socio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socio"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btn_no_socio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No socio" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
