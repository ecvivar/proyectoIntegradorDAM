<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo"
    android:padding="16dp">

    <!-- Guideline para posicionamiento proporcional -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

        <!-- Logo y título -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor de datos -->
    <LinearLayout
        android:id="@+id/contenedorDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@drawable/border_container"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintVertical_bias="0.2">

            <!-- Foto del socio -->
            <ImageView
                android:id="@+id/imgSocio"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/foto_socio"
                />
            <TextView
                android:id="@+id/tvTituloCarnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARNET DE SOCIO"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"/>

            <!-- Datos del socio -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:text="Nombre: Julián “Stack” Medina"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@drawable/border_carnet"/>

            <TextView
                android:id="@+id/tvDni"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:text="DNI: 43.956.279"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@drawable/border_carnet"/>

            <TextView
                android:id="@+id/tvSocio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:text="N° de Socio: 2354973895169"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:background="@drawable/border_carnet"/>

        </LinearLayout>

    <!-- Botón imprimir -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImprimir"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="IMPRIMIR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:background="@drawable/border_boton"
        app:cornerRadius="30dp"
        app:backgroundTint="#16613C"
        app:layout_constraintTop_toBottomOf="@id/contenedorDatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>