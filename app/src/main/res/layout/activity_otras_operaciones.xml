<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96BEAA"
    tools:context=".OtrasOperacionesActivity">

    <!-- Guideline superior -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <!-- Logo centrado arriba -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTRAS OPERACIONES"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/containerBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <!-- Botón Lista de Pagos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnListaPagos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Lista de Pagos"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="#16613C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Listar Vencimientos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVencimientos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Listar Vencimientos del Día"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="#16613C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Imprimir Carnet -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCarnet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Imprimir Carnet de Socio"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="#16613C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Asignar Actividad -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsignarActividad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Asignar Actividad para No Socio"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            app:backgroundTint="#16613C"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>