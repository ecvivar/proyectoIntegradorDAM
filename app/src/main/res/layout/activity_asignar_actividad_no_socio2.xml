<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo"
    tools:context=".AsignarActividadNoSocio2">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/barraSuperior"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/border_inicio"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="12dp"
        android:clipToOutline="true"
        android:backgroundTint="@color/verde_oscuro">

        <ImageView
            android:id="@+id/btnAtras"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:id="@+id/txtActividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVIDADES"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Cuadro de búsqueda -->
    <LinearLayout
        android:id="@+id/layoutBusqueda"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_search"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp">

        <EditText
            android:id="@+id/etBuscarDni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="12.345.679"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:background="@null"
            android:inputType="number"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/btnBuscar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_white"/>
    </LinearLayout>

    <!-- Resultados -->
    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrando resultados para: 23.456.789..."
        android:textStyle="italic"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutBusqueda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Tarjeta datos del no socio -->
    <LinearLayout
        android:id="@+id/cardDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card_white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvResultados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/tvNombreNoSocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALENTINA “LOOP” HERRERA"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCUMENTO: 23.456.789"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTADO: NO SOCIO"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Tarjeta actividad -->
    <LinearLayout
        android:id="@+id/cardActividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card_white"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardDatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/tvActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acrobacias aéreas"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14/04/2025 08:00hs"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$3800"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>

    <!-- Botón siguiente -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSiguiente"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:text="SIGUIENTE"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:backgroundTint="#16613C"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardActividad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>