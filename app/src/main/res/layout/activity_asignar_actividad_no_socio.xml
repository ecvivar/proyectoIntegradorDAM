<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_fondo_app"
    tools:context=".AsignarActividadNoSocioActivity">

    <!-- Logo centrado arriba -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para volver atrás -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnActividades"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="ACTIVIDADES"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/verde_boton_app"
        app:icon="@drawable/arrow_back"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:shapeAppearance="@style/ShapeAppearance.App.Button.EsquinasPersonalizadas" />

    <LinearLayout
        android:id="@+id/contenedor_principal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSiguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActividades">

        <!-- SearchView con esquinas redondeadas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/verde_boton_app"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:iconifiedByDefault="false"
                app:queryHint="Buscar actividad..." />

        </androidx.cardview.widget.CardView>

        <!-- Contenedor para que las tarjetas se puedan desplazar si no caben en pantalla -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ======================================= -->
                <!--    TARJETA 1: ACROBACIAS AÉREAS         -->
                <!-- ======================================= -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Encabezado Acrobacias -->
                        <LinearLayout
                            android:id="@+id/encabezado_acrobacias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verde_boton_app"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ACROBACIAS AÉREAS"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/flecha_acrobacias"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_down" />
                        </LinearLayout>

                        <!-- Contenido Acrobacias -->
                        <LinearLayout
                            android:id="@+id/contenido_acrobacias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="PRECIO: $3800"
                                android:textStyle="bold"/>

                            <CheckBox
                                android:id="@+id/acrobacias_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunes y Miércoles 19:00hs" />
                            <CheckBox
                                android:id="@+id/acrobacias_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Martes y Jueves 10:00hs" />
                            <CheckBox
                                android:id="@+id/acrobacias_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sábados 11:00hs" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ======================================= -->
                <!--         TARJETA 2: FÚTBOL               -->
                <!-- ======================================= -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Encabezado Fútbol -->
                        <LinearLayout
                            android:id="@+id/encabezado_futbol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verde_boton_app"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="FÚTBOL"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/flecha_futbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_down" />
                        </LinearLayout>

                        <!-- Contenido Fútbol -->
                        <LinearLayout
                            android:id="@+id/contenido_futbol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="PRECIO: $2500"
                                android:textStyle="bold"/>

                            <CheckBox
                                android:id="@+id/futbol_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunes y Miércoles 18:00hs" />
                            <CheckBox
                                android:id="@+id/futbol_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Martes y Jueves 18:00hs" />
                            <CheckBox
                                android:id="@+id/futbol_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sábados 09:00hs" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ======================================= -->
                <!--         TARJETA 3: HOCKEY               -->
                <!-- ======================================= -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Encabezado Hockey -->
                        <LinearLayout
                            android:id="@+id/encabezado_hockey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/verde_boton_app"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="HOCKEY"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/flecha_hockey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_down" />
                        </LinearLayout>

                        <!-- Contenido Hockey -->
                        <LinearLayout
                            android:id="@+id/contenido_hockey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="PRECIO: $3000"
                                android:textStyle="bold"/>

                            <CheckBox
                                android:id="@+id/hockey_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunes y Miércoles 16:00hs" />
                            <CheckBox
                                android:id="@+id/hockey_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Martes y Jueves 16:00hs" />
                            <CheckBox
                                android:id="@+id/hockey_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Viernes 17:00hs" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSiguiente"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:text="SIGUIENTE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/verde_boton_app"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
