<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96BEAA"
    tools:context=".MenuPrincipal">

    <!-- Guideline para posicionamiento proporcional -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <!-- Logo centrado arriba -->
    <ImageView
        android:id="@+id/logoClubDeportivo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/club_deportivo"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor principal -->
    <LinearLayout
        android:id="@+id/containerInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logoClubDeportivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Fila con Bienvenida y Menú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/border_inicio">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡BIENVENIDO, ADMIN!"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="60dp">

            <!-- Botón Registrar Socio -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarSocio"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.6"
                android:text="Registrar Socio"
                android:textSize="18sp"
                app:cornerRadius="30dp"
                app:backgroundTint="#16613C"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Botón Registrar No Socio -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarNoSocio"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrar No Socio"
                android:textSize="18sp"
                app:cornerRadius="30dp"
                app:backgroundTint="#16613C"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Panel lateral (menú hamburguesa) -->
    <LinearLayout
        android:id="@+id/navView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTRAS OPERACIONES"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnListaPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Pagos"/>

        <Button
            android:id="@+id/btnVencimientosDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Vencimientos del Día"/>

        <Button
            android:id="@+id/btnImprimirCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imprimir Carnet de Socio"/>

        <Button
            android:id="@+id/btnAsignarActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignar Actividad para No Socio"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>