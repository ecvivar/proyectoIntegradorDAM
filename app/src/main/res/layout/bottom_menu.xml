<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/verde_fondo">


    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@color/verde_oscuro"
        android:text="OTRAS OPERACIONES"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <!-- Contenedor del menú -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnListaPagos"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="LISTA DE PAGOS"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:gravity="center"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/verde_boton"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVencimientosDia"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="LISTAR VENCIMIENTOS DEL DÍA"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:gravity="center"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/verde_boton"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImprimirCarnet"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="IMPRIMIR CARNET DE SOCIO"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:gravity="center"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/verde_boton"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAsignarActividad"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="ASIGNAR ACTIVIDAD PARA EL NO SOCIO"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:gravity="center"
            app:cornerRadius="0dp"
            app:backgroundTint="@color/verde_boton"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>